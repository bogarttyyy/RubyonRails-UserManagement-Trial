<div class="container">
  <div class="col-xs-12 col-lg-4 col-lg-offset-4 login-form">
    <h1 class="text-center">Assign Role</h1>
    <%= form_for :login_role, :html => {:class => 'form-horizontal'}, url: login_role_path, method: :patch do |f| %>

      <div class="form-group">
        <%= f.label :role %>
        <%= select_tag "role_select", options_from_collection_for_select(Role.all, 'id', 'roletype', @login.roles.map{ |j| j.id }), :class => 'form-control',  :multiple => true %>
        <%= hidden_field_tag(:parent_id, params[:id]) %>
      </div>

      <%= link_to 'Cancel', login_path(current_user.id),:class => 'btn btn-default pull-right' %>
      <%= f.submit :class => 'btn btn-default pull-right', :value => "Submit" %>
    <% end %>
  </div>
    
</div>