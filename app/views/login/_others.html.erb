<div class="container">
	<div class="row login-form">
		<h1>Welcome! <%= @login.username %></h1>
	</div>
	<div class="login-form">
		<table class="table table-bordered">
			<tr>
				<th>User ID</th>
				<th>Username</th>
				<th>Roles</th>
			</tr>
			<tr>
				<td class="col-lg-2"><%= @login.id %></td>
				<td class="col-lg-2"><%= @login.username %></td>
				<td class="col-lg-8">
					<% @login.roles.each do |role| %>
						<span class="label label-info custom-label">
							<%= role.roletype %>
						</span>
					<% end %>
				</td>
			</tr>
		</table>
		<%= link_to "Logout", log_out_path, :class => 'btn btn-danger'  %>
	</div>
</div>