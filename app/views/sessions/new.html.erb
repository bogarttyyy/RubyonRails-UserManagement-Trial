<div class="container">
  <div class="col-xs-12 col-lg-4 col-lg-offset-4 login-form">
    <h1 class="text-center">Login</h1>
    <%= form_tag sessions_path, :html => {:class => 'form-horizontal'} do %>

      <div class="form-group">
        <%= label_tag :username %><br>
        <%= text_field_tag :username, params[:username] , :class => "form-control", :placeholder => "Username" %>
      </div>

      <div class="form-group">
        <%= label_tag :password %><br>
        <%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password" %>
      </div>
	  
      <%= submit_tag "Sign in", :class => 'btn btn-default' %>
      <%= link_to "Register", sign_up_path, :class => 'btn btn-default' %>
      
    <% end %>
  </div>
    
</div>