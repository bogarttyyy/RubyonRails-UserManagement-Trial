<div class="container">
  <div class="col-xs-12 col-lg-4 col-lg-offset-4 login-form">
    <h1 class="text-center">Add New Role</h1>
    <%= form_for :role, :html => {:class => 'form-horizontal'}, url: role_index_path do |f| %>

      <div class="form-group">
        <%= f.label :roletype %><br>
        <%= f.text_field :roletype, :class => "form-control", :placeholder => "Enter new role..." %>
      </div>

      <%= f.submit :class => 'btn btn-default pull-right', :value => "Add role" %>
    <% end %>
  </div>
    
</div>